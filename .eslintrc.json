{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            4
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "no-unused-vars": [  "warn" ],
        "no-undef": [ "warn" ],
        "no-console": [ "warn" ],
        "no-case-declarations": [ "warn" ],
        "no-extra-semi": [ "warn" ],
        "no-unreachable": [ "warn" ],
        "no-redeclare": [ "warn" ],
        "no-useless-escape": [ "warn" ],
        "no-constant-condition": [ "warn" ]
    }
}